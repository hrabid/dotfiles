# System Navigation Aliases
## Aliases Related to listing Directories
if command -v lsd >/dev/null 2>&1; then
    alias ls=lsd
fi
alias lt='ls --tree'
alias lsa='ls -a'
alias llt='ls -l --tree'
alias lta='ls -a --tree'
alias lse='find . -type f ! -name "*.*"'

## Inspecting file content
alias catn="cat -n"
alias catb='cat -b'

## Copying
alias cp="cp -vi"
alias mv='mv -vi'

## Making Directories
alias mkdir="mkdir -pv"

## Aliases Related to Changing Directories
alias cdp='cd ..'
alias dot="cd $GHDOT"

## Aliases Related to fzf

## Terminal
alias c=clear
alias e=exit

## Editor Aliases
alias v=nvim
alias b=bat
alias fzb="fzf --preview 'bat --style=numbers --color=always {}'"


alias t=touch

alias pyserver="python -m http.server"
alias m=tldr

alias cz=chezmoi
alias cza='chezmoi apply'
alias czu='chezmoi update'
alias czd='chezmoi diff'
alias czs='chezmoi status'
alias cze='chezmoi edit'

# w3m
alias '?'=search

# git 
alias gcb='git branch | fzf | cut -c 3- | xargs git checkout'
